{{extend 'layout.html'}}
<div class="col-md-12 modal-body text-center" style="background:url(images/hola.jpg)">
    <h1>
        Asignacion de alumnos
    </h1>
</div>
<form class="form-horizontal" method="POST">
    <section class="col-xs-12">
    {{if idregistro != None:}}
    <p>
        Estudiante Asignado Exitosamente {{=idregistro}}
    </p>
    {{pass}}
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Alumno:</span>
        </h3>
    </article>
    <article class="col-xs-12 col-md-4 modal-body">
      {{rows = db().select(db.alumno.ALL)}}
        <select  name="alumno" class="form-control">
            {{for row in rows:}}
            <option value="{{=row.id}}">
                {{=row.nombre}}
            </option>
            {{pass}}
        </select>
    </article>
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Grado:</span>
        </h3>
    </article>
       <article class="col-xs-12 col-md-4 modal-body">
        <select name="grado" class="form-control">
            {{for row in grado:}}
            <option method="POST" value="{{=row.grado.id}}">
                {{=row.grado.descripcion}}
            </option>
            {{pass}}
        </select>
    </article>
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Seccion:</span>
        </h3>
    </article>
       <article class="col-xs-12 col-md-4 modal-body">
        <select name="seccion" class="form-control">
            {{for row in seccion:}}
            <option value="{{=row.seccion.id}}">
                {{=row.seccion.descripcion}}
            </option>
            {{pass}}
        </select>
    </article>
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-12 modal-body">
        <div class="col-xs-6 col-md-2 col-md-offset-4">
            <input type="submit" class="form-control btn btn-success" name="Guardar" value="Guardar"></input>
        </div>
    </article>
   </section>
</form>
