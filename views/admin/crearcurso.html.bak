{{extend 'layout.html'}}
<div class="col-md-12 modal-body text-center">
    <h1>
        Creacion de Cursos
    </h1>
</div>
<form id="form" class="form-horizontal" method="POST">
     <section class="col-xs-12">
    {{if cursoid != None:}}
    <p>
        Curso Creado Exitosamente {{=cursoid}}
    </p>
    {{pass}}
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Nombre del curso:</span>
        </h3>
    </article>
    <article class="col-xs-12 col-md-4 modal-body">
         <input type="text" class="form-control" name="curso">
    </article>
    </section>
    <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Catedratico encargado:</span>
        </h3>
    </article>
    <article class="col-xs-12 col-md-4 modal-body">
        <select name="catedratico" class="form-control">
            {{for row in rows:}}
            <option value="{{=row.id}}">
                {{=row.nombre}}
            </option>
            {{pass}}
        </select>
    </article>
    </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-12 modal-body">
        <div class="col-xs-6 col-md-2 col-md-offset-4">
            <input type="submit" class="form-control btn btn-success" name="Guardar"></input>
        </div>
    </article>
   </section>
</form>
