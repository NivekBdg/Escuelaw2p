{{extend 'layout.html'}}
<div class="col-md-12 modal-body text-center" style="background:url(images/hola.jpg)">
    <h1>
        Ingreso de Notas
    </h1>
</div>
<form class="form-horizontal" method="POST">
     <section class="col-xs-12">
    {{if idnota != None:}}
    <p>
       Nota Ingresada Exitosamente {{=idnota}}
    </p>
    {{pass}}
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Alumno:</span>
        </h3>
    </article>
    <article class="col-xs-12 col-md-4 modal-body">
         {{rows = db().select(db.alumno.ALL)}}
        <select name="alumno" class="form-control">
            {{for row in rows:}}
            <option args="0" value="{{=row.id}}">
                {{=row.nombre}}
            </option>
            {{pass}}
        </select>
    </article>
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Curso:</span>
        </h3>
    </article>
    <article class="col-xs-12 col-md-4 modal-body">
          {{rows = db().select(db.curso.ALL)}}
        <select name="curso" class="form-control">
            {{for row in rows:}}
            <option args="0" value="{{=row.id}}">
                {{=row.descripcion}}
            </option>
            {{pass}}
        </select>
    </article>
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-2 modal-body text-center">
        <h3>
          <span class="label label-primary">Nota:</span>
        </h3>
    </article>
    <article class="col-xs-12 col-md-4 modal-body">
         <input type="text" class="form-control" name="nota">
    </article>
   </section>
   <section class="col-xs-12 col-md-12 modal-body">
    <article class="col-xs-12 col-md-12 modal-body">
        <div class="col-xs-6 col-md-2 col-md-offset-4">
            <input type="submit" class="form-control btn btn-success" name="Guardar"></input>
        </div>
    </article>
   </section>
</form>
